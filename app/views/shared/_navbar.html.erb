<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="display: flex;">
  <!-- COLLAPSING MENU -->
  <div class="navbar-burger-box" style="flex: 0 0 33%;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
  <!-- MENU GAUCHE -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent" style="flex: 0 0 33%;">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Games", games_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Buddies", conversations_path, class: "nav-link" %>
        </li>
    </ul>
  </div>

  <!-- LOGO AU CENTRE -->
  <div style="display: flex; justify-content: center; flex: 0 0 33%;">
    <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag asset_path("logo_gb.png") %>
      <% end %>
  </div>

  <!-- LOGIN OU AVARTAR DROITE -->
  <div style="display: flex; justify-content: flex-end; flex: 0 0 33%;">

    <!-- AVATAR EXTREME DROITE -->
    <div id="flex-avatar">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag gravatar_image_url(current_user.email), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to 'Edit your profile', edit_user_registration_path, class: "dropdown-item"  %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <!-- LOGIN -->
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
