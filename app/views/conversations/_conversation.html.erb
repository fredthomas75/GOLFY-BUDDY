<li class="list-group-item clearfix">
  <%= link_to conversation.subject, conversation_path(conversation) %>

<div class="btn-group-vertical pull-right btn-group-sm">
  <% if conversation.is_trashed?(current_user) %>
    <%= link_to 'Restore', restore_conversation_path(conversation),
                class: 'btn btn-info', method: :post %>
  <% else %>
    <div>
    <%= link_to '<i class="fas fa-trash"></i>'.html_safe, conversation_path(conversation),
                class: 'btn', method: :delete,
                data: {confirm: 'Are you sure?'} %>
    <% if conversation.is_unread?(current_user) %>
      <%= link_to '<i class="far fa-envelope-open"></i>'.html_safe, mark_as_read_conversation_path(conversation),
                  class: 'btn', method: :post %>
    <% end %>
    </div>
  <% end %>
</div>

  <p><%= render 'conversations/participant', conversation: conversation %></p>

  <p><%= conversation.last_message.body %>
    <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>
</li>


