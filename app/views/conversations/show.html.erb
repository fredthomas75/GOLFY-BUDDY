<% page_header "Conversation" %>

<div class="panel panel-default col-8 offset-2">
<p>Chatting with
  <%= render 'conversations/participant', conversation: @conversation %>
</p>

  <div class="panel-heading col-12"><%= @conversation.subject %></div>

  <div class="panel-body">
    <div class="messages">
      <% @conversation.receipts_for(current_user).each do |receipt| %>
        <div class="media">
          <% message = receipt.message %>
          <div class="media-left">
            <%= gravatar_for message.sender, 30, message.sender.name %>
          </div>

          <div class="media-body">
            <h6 class="media-heading"><strong><%= message.sender.name %></strong><span style="color:grey"> -
                <%= message.created_at.strftime("%-d %B %Y, %H:%M") %></span></h6>
            <%= message.body %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= form_tag reply_conversation_path(@conversation), method: :post do %>
  <div class="form-group col-8 offset-2">
    <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
  <%= submit_tag "Send Message", class: 'send-button' %>
  </div>
<% end %>
