<div class="main-container">
  <!-- CAROUSEL START -->
  <div id="carouselExampleIndicators" class="carousel slide carousel-container" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @attachments.each_with_index do |att, index| %>
      <% if index == 0 %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= att %>" class="active"></li>
      <% else %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= att %>"></li>
      <% end %>
      <% end %>
    </ol>
    <div class="carousel-inner" style="height: 100%;">
      <% @attachments.each_with_index do |att, index| %>
      <% if index == 0 %>
      <div class="carousel-item active" style="height: 100%;">
        <img src="<%= att.photo_url %>" class="d-block w-100" alt="..." style="height: 100%;">
      </div>
      <% else %>
      <div class="carousel-item" style="height: 100%;">
        <img src="<%= att.photo_url %>" class="d-block w-100" alt="..." style="height: 100%;">
      </div>
      <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <!-- CAROUSEL END -->
  <div class="info-map">
    <!-- COURSE INFO START -->
    <div class="course-info">
      <h1 class="course-name"><%= @course.name %></h1>
      <p><strong>Style:</strong> <%= @course.style %></p>
      <p><strong>Number of holes:</strong>
        <% if @course.number_holes == 0 %>
        Driving range
        <% elsif @course.number_holes == 1 %>
        9 holes
        <% elsif @course.number_holes == 2 %>
        18 holes
        <% end %>
      </p>
      <p><strong>Difficulty:</strong> <%= @course.difficulty %></p>
      <p><strong>Address:</strong> <%= @course.address %></p>
      <p><strong>Phone:</strong> <%= @course.phone %></p>
      <p><strong>Website:</strong> <%= @course.website %></p>
      <p><strong>About course:</strong> <%= @course.about_course %></p>

      <%= link_to 'Edit', edit_course_path(@course) %> //
      <%= link_to 'Back', courses_path %>
    </div>
    <div
    id="map"
    style="width: 100%; height: 40%;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
    <!-- COURSE INFO END -->
  </div>
</div>
