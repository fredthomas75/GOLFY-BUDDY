<div class="min-height-container">
  <div class="row form-test">
    <!--PROFILE COLONNE -->
    <div class="col color-test2">
      <div class="col profile">

        <p id="notice"><%= notice %></p>
        <div class="edit-button">
        <%= link_to 'Edit', edit_user_registration_path(@user) %>
        </div>
        <div class="avatar-profile">
        <%= gravatar_for_show @user %>

        </div>
          <strong class="grey-color1"> <%= @user.name %> </strong>
        <br>
        <p class="grey-color2">
        <%= image_tag "localisation-golf.png", alt: "alttext" %>
        <%= @user.current_city %>
        <br>
        <%= image_tag "icon-golf.png", alt: "alttext" %>
        <%= @user.handicap %>
        <br>
        <%= @user.language %>
        <br>
        <%= @user.about_me %>
        </p>

      </div>
    </div>

    <!-- GAMES COLONNE -->
    <div class="col color-test4">
      <div class="row color-test3">
        <div class="col">
          <h3 class="position1">Upcomming Games</h3>
        </div>
        <div class="col">
          <h3 class="buddies-h3-1">Past Games</h3>
        </div>
      </div>
      <div>
        <h3 class="buddies-h3-2">Your Next Game</h3>
      </div>
      <!-- NEXT GAME CARD -->
      <div class="row">
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
          <h2 class="buddies-h2">Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
          </div>
        </div>
      </div>
      <div>
        <h3 class="grey-color">Future Game</h3>
      </div>
      <!-- FUTURE GAMES CARD -->
      <div class="row">
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
          <h2 class="buddies-h2-2">Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
