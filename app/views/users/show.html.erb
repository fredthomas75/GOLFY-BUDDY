<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.first_name %> <%= @user.last_name %><br>
  <strong>Email:</strong>
  <%= @user.email %><br>
  <%= gravatar_for @user %><br>

  <% if current_user == @user %>
      <% @user.requested_friends.each do |req|%>
        <% if !current_user.friends_with?(req) %>
        <%= req.first_name %> <%= req.last_name %>
        <%= link_to 'Accept Friend', friendships_confirm_path(req), method: :post, class: 'btn btn-outline-success btn-sm' %>
        <%= link_to 'Decline Friend', friendships_decline_path(req), method: :post, class: 'btn btn-outline-warning btn-sm' %>
        <% end %>
      <% end %>
  <% end %>

  <% if current_user != @user %>
    <%= link_to 'Send message', new_message_path(to: @user.id), class: 'btn btn-primary btn-sm' %>
  <% end %>
  <% if current_user != @user && !current_user.friends_with?(@user) %>
      <%= link_to 'Add friend', friendships_request_path(@user), method: :post, class: 'btn btn-outline-primary btn-sm'  %>
  <% elsif current_user != @user && current_user.friends_with?(@user) %>
      <%= link_to 'Remove friend', friendships_remove_path(@user), method: :delete, class: 'btn btn-outline-danger btn-sm'  %>
  <% end %>
</p>


